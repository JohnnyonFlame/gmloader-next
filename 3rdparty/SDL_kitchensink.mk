build/${ARCH}/SDL_kitchensink/src/%.c.o: 3rdparty/SDL_kitchensink/src/%.c
	@mkdir -p $(@D)
	$(CC) $(KIT_CONFIG) $(KIT_FLAGS) -c $< -o $@
